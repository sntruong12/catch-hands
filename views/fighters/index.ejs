<%- include('../partials/header') %>

<div class="uk-container uk-padding">
  <h1 class="uk-text-center uk-text-uppercase uk-heading-primary uk-heading-line">
    <span>fighters</span>
  </h1>
</div>

<div class="uk-container uk-padding">
  <div class="uk-child-width-1-6@s uk-grid-collapse uk-text-center" uk-grid>
      <% fighters.forEach(fighter => { %>
      <div>
          <div class="uk-tile uk-tile-default fighter-card">
              <a uk-toggle="target: #catch-hands-<%= fighter.id %>">
                <img data-src="<%= fighter.stock_icon_url %>" alt="<%= fighter.name %>" data-width="" data-height="" uk-img>
              </a>
              <a class="uk-link-text" uk-toggle="target: #catch-hands-<%= fighter.id %>">
                <%= fighter.name %>
              </a>
              <!-- Modal Start -->
              <div id="catch-hands-<%= fighter.id %>" class="uk-flex-top" uk-modal>
                <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-width-auto">
      
                  <button class="uk-modal-close-default" type="button" uk-close></button>

                  <img data-src="<%= fighter.image_url %>" alt="<%= fighter.name %>" width="250px" uk-img>
                  <h2 class="uk-text-uppercase uk-heading-line">
                    <span><%= fighter.name %></span>
                  </h2>

                  <% if(user) { %>
                    <a class="uk-link-text" href="/mains/add/<%= fighter.id %>">Add Fighter</a>
                  <% } else { %>
                    <a class="uk-link-text" href="/auth/google">Login to add fighters</a>
                  <% } %>
            
                </div>
              </div>
              <!-- Modal End -->
          </div>
      </div>
      <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>